function myz() {
 cd $1 && subl .;
}
function myza() {
 cd $1 && atom .;
 say you are so cool;
}
function myzaf() {
 cd $1 && atom .;
 say you are so cool;
 /usr/bin/osascript -e 'tell application "Atom"' -e "activate" -e 'tell application "System Events"' -e 'keystroke "f" using {control down, command down}' -e "end tell" -e "end tell";
}
function myzc() {
 code $1;
}
function myzco() {
 cd $1 && code .;
}
function myzcc() {
 code .;
}
